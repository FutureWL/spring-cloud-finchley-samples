<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>spring-cloud-samples</artifactId>
    <groupId>io.github.futurewl</groupId>
    <version>190703</version>
    <packaging>pom</packaging>
    <modules>
        <module>hello-world</module>
        <module>hello-world-log</module>
        <module>hello-world-rest</module>
        <!-- micro -->
        <module>micro-basic</module>
        <module>micro-quartz</module>
        <module>micro-redis</module>
        <module>micro-report</module>
        <!-- micro-eureka -->
        <module>micro-eureka-server</module>
        <module>micro-eureka-client</module>
        <module>micro-eureka-client-feign</module>
        <module>micro-eureka-client-ribbon</module>
        <module>micro-eureka-client-zuul</module>
        <module>micro-eureka-client-feign-hystrix</module>
        <!-- micro-config-->
        <module>micro-config-server</module>
        <module>micro-config-server-bus</module>
        <module>micro-config-client</module>
        <module>micro-config-client-bus</module>
        <!-- msa -->
        <!-- msa-collection -->
        <module>msa-collection-server</module>
        <module>msa-collection-eureka</module>
        <module>msa-collection-eureka-feign</module>
        <!-- msa-city-->
        <module>msa-city-server</module>
        <module>msa-city-eureka</module>
        <!-- msa-data -->
        <module>msa-data-server</module>
        <module>msa-data-eureka</module>
        <module>msa-eureka-client-zuul</module>
        <!-- msa-report -->
        <module>msa-report-server</module>
        <module>msa-report-eureka</module>
        <module>msa-report-eureka-feign</module>
        <module>msa-report-eureka-feign-gateway</module>
        <module>msa-report-eureka-feign-gateway-hystrix</module>
    </modules>
    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.compilerVersion>1.8</maven.compiler.compilerVersion>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>Finchley.SR4</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>2.0.9.RELEASE</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>2.0.9.RELEASE</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>repackage</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
